<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/selectThemeTitle"
        android:id="@+id/tv_Theme"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Theme"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/rg_theme">

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/themeBlue"
                android:id="@+id/rb_blue"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:drawableEnd="@android:drawable/btn_radio"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@android:color/holo_blue_dark"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/themeGreen"
                android:id="@+id/rb_green"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:drawableEnd="@android:drawable/btn_radio"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@android:color/holo_green_dark"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/themeGray"
                android:id="@+id/rb_gray"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:drawableEnd="@android:drawable/btn_radio"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@android:color/darker_gray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/themeOrange"
                android:id="@+id/rb_orange"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:drawableEnd="@android:drawable/btn_radio"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@android:color/holo_orange_dark"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/themeRed"
                android:id="@+id/rb_red"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:drawableEnd="@android:drawable/btn_radio"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@android:color/holo_red_dark"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/themeWhite"
                android:id="@+id/rb_white"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:drawableEnd="@android:drawable/btn_radio"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@android:color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black" />

        </RadioGroup>

    </ScrollView>

</RelativeLayout>