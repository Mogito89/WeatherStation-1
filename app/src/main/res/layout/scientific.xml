<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                                        xmlns:gauge="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/main_layout"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        tools:context=".WeatherStation"
                                        android:fitsSystemWindows="true"
                                        style="?myBackground"
                                        android:background="?myBackground"
                                        tools:ignore="Overdraw">

    <!-- the main content view -->
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- the lollipop style toolbar -->
        <include
            layout="@layout/toolbar"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/vintage"
            android:background="@drawable/lightwoodportrait"
            android:visibility="visible"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tempSign"
                android:id="@+id/tvCurrTempView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pressSign"
                android:id="@+id/tvCurrPressView2"
                android:layout_below="@+id/thermometer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/humidSign"
                android:id="@+id/tvCurrHumidView2"
                android:layout_below="@+id/thermometer"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <tk.giesecke.weatherstation.GaugeView
                android:id="@+id/barometer"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                gauge:showOuterShadow="false"
                gauge:showOuterBorder="false"
                gauge:scaleStartValue="915"
                gauge:scaleEndValue="1086"
                gauge:scalePosition="0.01"
                gauge:rangeValues="@array/mbarRanges"
                gauge:rangeColors="@array/rangeColors"
                gauge:showScale="false"
                gauge:showNeedle="true"
                gauge:showRanges="true"
                gauge:divisions="14"
                gauge:subdivisions="10"
                gauge:showOuterRim="true"
                gauge:showInnerRim="true"
                gauge:needleHeight="0.35"
                gauge:faceImageID="@drawable/barometer"
                android:layout_below="@+id/tvCurrPressView2"/>

            <tk.giesecke.weatherstation.GaugeView
                android:id="@+id/hygrometer"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                gauge:showOuterShadow="false"
                gauge:showOuterBorder="false"
                gauge:scaleStartValue="-5"
                gauge:scaleEndValue="105.5"
                gauge:scalePosition="0.01"
                gauge:rangeValues="@array/humidRanges"
                gauge:rangeColors="@array/rangeColors"
                gauge:showScale="false"
                gauge:showNeedle="true"
                gauge:showRanges="true"
                gauge:divisions="10"
                gauge:subdivisions="10"
                gauge:showOuterRim="true"
                gauge:showInnerRim="true"
                gauge:needleHeight="0.3"
                gauge:faceImageID="@drawable/hygrometer"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvCurrHumidView2"/>

            <tk.giesecke.weatherstation.GaugeView
                android:id="@+id/thermometer"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:onClick="onClick"
                gauge:showOuterShadow="false"
                gauge:showOuterBorder="false"
                gauge:scaleStartValue="-20"
                gauge:scaleEndValue="130"
                gauge:scalePosition="0.01"
                gauge:rangeValues="@array/tempRanges"
                gauge:rangeColors="@array/rangeColors"
                gauge:showScale="false"
                gauge:showNeedle="true"
                gauge:showRanges="true"
                gauge:divisions="13"
                gauge:subdivisions="5"
                gauge:showOuterRim="true"
                gauge:showInnerRim="true"
                gauge:needleHeight="0.3"
                gauge:faceImageID="@drawable/thermometer"
                />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modern"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trTemp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/currTemp"
                    android:id="@+id/tvCurrTemp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/tempSign"
                    android:id="@+id/tvCurrTempView"
                    android:layout_weight="1"/>

            </TableRow>

            <com.androidplot.xy.XYPlot
                android:id="@+id/xyTempPlot"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                title="@string/currTemp"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/trPress">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/currPress"
                    android:id="@+id/tvCurrPress"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/pressSign"
                    android:id="@+id/tvCurrPressView"
                    android:layout_weight="1"/>

            </TableRow>

            <com.androidplot.xy.XYPlot
                android:id="@+id/xyPressPlot"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                title="@string/currPress"
                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/trHumid">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/currHumid"
                    android:id="@+id/tvCurrHumid"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/humidSign"
                    android:id="@+id/tvCurrHumidView"
                    android:layout_weight="1"/>

            </TableRow>

            <com.androidplot.xy.XYPlot
                android:id="@+id/xyHumidPlot"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                title="@string/currHumid"
                />

        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">

        </com.google.android.gms.ads.AdView>

    </LinearLayout>

    <!-- the side navigation drawer view -->
    <include
        layout="@layout/nav_drawer"/>

</android.support.v4.widget.DrawerLayout>
